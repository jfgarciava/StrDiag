-- Semantica  "label"
isId:: String -> Bool
isId a = (take 4 a) == "\\Id{"

isid:: String -> Bool
isid a = (take 4 a) == "\\id{"

l2Comp:: String -> String -> String
l2Comp a b   
       | isId a = b
       | isId b = a
       | otherwise = b ++ " \\comp " ++ a 

h2Comp:: String -> String -> String
h2Comp a b 
       | isid a = b
       | isid b = a
       | otherwise = b ++ " \\star " ++ a 

preComp:: String -> String -> String
preComp n f 
       | isid n = n
       | isId f = n
       | otherwise = concat [n, "_{", f, "}"] 

posComp:: String -> String -> String
posComp f n 
       | isId f = n
       | isid n = n
       | otherwise = f ++ " \\at " ++ n


