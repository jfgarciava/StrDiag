--- las lineas son iguales quitando identidades
isIdAtr:: Atrib -> Bool
isIdAtr (Atrib n _) = (take 3 n) == "id@" 

removeIds:: [Fc] -> [Fc]
removeIds as = [a | a <- as,  (not . isIdAtr . keyFc) a  ]

instance Eq Line where
  (Line as) == (Line bs) = (removeIds as) == (removeIds bs)


